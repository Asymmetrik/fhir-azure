{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cosmosAccountName": {
            "type": "string",
            "defaultValue": "GENERATE"
        },
        "siteName": {
            "type": "string",
            "defaultValue": "GENERATE"
        },
        "hostingPlanName": {
            "type": "string",
            "defaultValue": "GENERATE"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ],
            "defaultValue": "S1",
            "metadata": {
                "description": "The pricing tier for the hosting plan."
            }
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0",
            "metadata": {
                "description": "The instance size of the hosting plan (small, medium, or large)."
            }
        }
    },
    "variables": {
        "cosmosAccountNameGen": "[concat('fhirdb',uniqueString(resourceGroup().id, deployment().name))]",
        "hostingPlanNameGen": "[concat('conkasp',uniqueString(resourceGroup().id, deployment().name))]",
        "siteNameGen": "[concat('phxserver-',uniqueString(resourceGroup().id, deployment().name))]",
        "cosmosAccountName": "[if(equals(parameters('cosmosAccountName'),'GENERATE'),variables('cosmosAccountNameGen'),parameters('cosmosAccountName'))]",
        "hostingPlanName": "[if(equals(parameters('hostingPlanName'),'GENERATE'),variables('hostingPlanNameGen'),parameters('hostingPlanName'))]",
        "siteName": "[if(equals(parameters('siteName'),'GENERATE'),variables('siteNameGen'),parameters('siteName'))]"
    },
    "resources": [
        {
            "apiVersion": "2015-04-08",
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "name": "[variables('cosmosAccountName')]",
            "location": "[resourceGroup().location]",
            "kind": "MongoDB",
            "properties": {
                "name": "[variables('cosmosAccountName')]",
                "databaseAccountOfferType": "Standard",
                "locations": [
                    {
                        "locationName": "[resourceGroup().location]",
                        "failoverPriority": 0
                    }
                ]
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('sku')]",
                "capacity": "[parameters('workerSize')]"
            },
            "properties": {
                "name": "[variables('hostingPlanName')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('siteName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
            ],
            "properties": {
                "serverFarmId": "[variables('hostingPlanName')]",
                "siteConfig": {
                    "phpVersion": "off"
                }
            },
            "resources": [
                {
                    "apiVersion": "2014-11-01",
                    "name": "appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', variables('siteName'))]"
                    ],
                    "properties": {
                        "MONGO_HOSTNAME": "[variables('cosmosAccountName')]",
                        "RESOURCE_SERVER": "[variables('siteName')]"
                    }
                }
            ]
        }
    ]
}